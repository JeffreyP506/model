p>
  <strong>Title:</strong>
  <%= @table.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @table.text %>
</p>

<% if current_user %>
<h2>Add a column:</h2>
<%= form_for([@table, @table.column.build]) do |f| %>
  <p>
    <%= f.label :column %><br />
    <%= f.text_field :column %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% end %>

<%= link_to 'Back', tables_path %>
| <%= link_to 'Edit', edit_table_path(@table) %>