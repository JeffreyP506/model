<%= form_for @table, html: { class: "form-inline" } do |f| %>
<div class="field form-group">
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Chinese Name" %>
  <%= f.text_field :cname %>

  <%= f.label "File Name" %>
  <%= f.text_field :file %>

  <%= f.label "Partitioning Key" %>
  <%= f.text_field :ptk %>
</div>

<div id="columns">
  <%= f.fields_for :columns do |builder| %>
     <%= render 'column_fields', f: builder %>
  <% end %>
</div>

<%= link_to_add_fields 'Add a column', f, :columns %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to "Back", tables_path %>
