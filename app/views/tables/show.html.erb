<p>
  <strong>Name:</strong>
  <%= @table.name %>
</p>
<p>
  <strong>Cname:</strong>
  <%= @table.cname %>
</p>
<p>
  <strong>file:</strong>
  <%= @table.file %>
</p>
<p>
  <strong>ptk:</strong>
  <%= @table.ptk %>
</p>

<h2>Columns</h2>
<table class="table table-condensed table-responsive">
    <tr>
        <th>Name</th>
        <th>Cname</th>
        <th>dtype</th>
        <th>null_ind</th>
        <th>pk</th>
        <th>note</th>
    </tr>
<%= render @table.columns %> 
</table>

<% if current_user %>
<h2>Add a column:</h2>
<%= form_for([@table, @table.columns.build]) do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cname %><br />
    <%= f.text_field :cname %>
  </p>
  <p>
    <%= f.label :dtype %><br />
    <%= f.text_field :dtype %>
  </p>
  <p>
    <%= f.label :null_ind %><br />
    <%= f.text_field :null_ind %>
  </p>
  <p>
    <%= f.label :pk %><br />
    <%= f.text_field :pk %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% end %>

<%= link_to "Back to Models", tables_path %>
<% if current_user %>
| <%= link_to 'Edit Model', edit_table_path(@table) %>
<% end %>